<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTaxiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
<!--        <item name="bottomSheetStyle">bottom</item>-->
    </style>

    <style name="TextSmall">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TextMedium" parent="TextSmall">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="TextLarge" parent="TextSmall">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

    <style name="DefButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DefImageViewStyle">
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="DefCardViewStyle">
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="CardViewWithCornerStyle" parent="DefCardViewStyle">
        <item name="android:background">@drawable/rounded_layout</item>
        <item name="android:elevation">@dimen/_28sdp</item>
    </style>


    <style name="DefEditTextStyle">
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">@dimen/_18sdp</item>
        <item name="android:drawablePadding">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColorHint">@color/text_normal_color</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:paddingLeft">@dimen/_17sdp</item>
    </style>

    <style name="LottieStyle">
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:elevation">@dimen/_15sdp</item>
        <item name="lottie_autoPlay">false</item>
        <item name="lottie_rawRes">@raw/map_pin_animation</item>
        <item name="lottie_speed">2</item>
    </style>



    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:background">@drawable/rounded_layout</item>
        <item name="android:elevation">@dimen/_28sdp</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


</resources>