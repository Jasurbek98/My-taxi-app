<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/current_location_layout"
    style="@style/CardViewWithCornerStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        style="@style/TextLarge"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/where"
        android:textColor="@color/saved_text_title_color"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/currentLocation"
        style="@style/DefEditTextStyle"
        android:layout_width="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edit_text_grey_stroke"
        android:drawableLeft="@drawable/ic_blue_oval"
        android:enabled="false"
        android:hint="@string/where"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialTextView" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bookingButton"
        style="@style/DefButtonStyle"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:padding="0dp"
        android:text="@string/confirm"
        app:backgroundTint="@color/main_button_color"
        app:cornerRadius="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/currentLocation"
        app:layout_constraintStart_toStartOf="@+id/currentLocation"
        app:layout_constraintTop_toBottomOf="@id/currentLocation" />


</androidx.constraintlayout.widget.ConstraintLayout>