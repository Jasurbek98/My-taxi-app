<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/saved_home_image"
        style="@style/DefImageViewStyle"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/saved_home_name"
        style="@style/TextMedium"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@id/saved_search_item_district"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/saved_home_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ahmad Donish" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/saved_search_item_district"
        style="@style/TextSmall"
        android:layout_width="0dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/viewColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/saved_home_name"
        app:layout_constraintTop_toBottomOf="@id/saved_home_name"

        tools:text="Yunusabad 15" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/viewColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/saved_home_name"
        app:layout_constraintStart_toStartOf="@id/saved_home_image" />

</androidx.constraintlayout.widget.ConstraintLayout>