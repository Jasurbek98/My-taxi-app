<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <ImageButton
        android:id="@+id/cancelButton"
        style="@style/DefImageViewStyle"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_red_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/point_address_name"
        style="@style/TextMedium"
        android:layout_width="0dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/cancelButton"
        app:layout_constraintEnd_toStartOf="@+id/dragDropButton"
        app:layout_constraintStart_toEndOf="@+id/cancelButton"
        app:layout_constraintTop_toTopOf="@+id/cancelButton"
        tools:text="Ahmad Donish" />


    <ImageView
        android:id="@+id/dragDropButton"
        style="@style/DefImageViewStyle"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/drag_drop_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/viewColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dragDropButton"
        app:layout_constraintStart_toStartOf="@id/cancelButton" />

</androidx.constraintlayout.widget.ConstraintLayout>